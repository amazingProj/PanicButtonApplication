<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="333dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:contentDescription="@string/go_back" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="הגדרות כלליות"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginRight="10sp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />
    <TextView

        android:lineSpacingMultiplier="1"
        android:lineSpacingExtra="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="עת לחיצה על הכפתור מושמע צליל בתדר גבוהה, באפשרותך לכבותו"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:layout_marginRight="10sp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_marginLeft="70dp"
            android:layout_marginRight="40sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:textSize="26sp"
            android:text="@string/home_page_is_alarm" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="בעת לחיצה על הכפתור מופעלת הודעת טוסט, באפשרותך לבטל אותה"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lineSpacingMultiplier="1"
        android:lineSpacingExtra="5sp"
        android:layout_marginRight="10sp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <LinearLayout
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="26sp"
            android:checked="true"
            android:text="@string/home_page_is_toast_msg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>